# WasmWiz Environment Configuration
# Copy this file to .env and update the values for your environment

# Core application environment
ENVIRONMENT=development
LOG_LEVEL=debug
AUTH_REQUIRED=false

# Database configuration
DATABASE_URL=postgresql://username:password@localhost:5432/wasmwiz

# Redis configuration
REDIS_URL=redis://127.0.0.1:6379
REDIS_ENABLED=false

# Server configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# Security and execution limits
API_SALT=your-random-salt-here-change-in-production
MAX_WASM_SIZE=10485760      # 10MB in bytes
MAX_INPUT_SIZE=1048576      # 1MB in bytes
EXECUTION_TIMEOUT=5         # 5 seconds
MEMORY_LIMIT=134217728      # 128MB in bytes

# Content Security Policy (optional overrides)
CSP_REPORT_URI=
CSP_ENABLE_NONCE=false

# Optional: Directory for temporary WASM modules
WASM_TEMP_DIR=/tmp/wasm_modules

# Optional: TLS configuration for production deployments
# TLS_CERT_PATH=/path/to/cert.pem
# TLS_KEY_PATH=/path/to/key.pem
