# WasmWiz Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/wasmwiz

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# Logging Configuration
RUST_LOG=info,wasmwiz=debug

# Security Configuration
API_SALT=your-random-salt-here-change-in-production

# File Storage Configuration
WASM_TEMP_DIR=/tmp/wasm_modules

# Resource Limits
MAX_WASM_SIZE=10485760      # 10MB in bytes
MAX_INPUT_SIZE=1048576      # 1MB in bytes
EXECUTION_TIMEOUT=5         # 5 seconds
MEMORY_LIMIT=134217728      # 128MB in bytes

# Rate Limiting Configuration (per minute and per day)
FREE_TIER_RATE_MINUTE=10
FREE_TIER_RATE_DAY=500
BASIC_TIER_RATE_MINUTE=100
BASIC_TIER_RATE_DAY=10000
PRO_TIER_RATE_MINUTE=500
PRO_TIER_RATE_DAY=50000

# Optional: For production deployment
# TLS_CERT_PATH=/path/to/cert.pem
# TLS_KEY_PATH=/path/to/key.pem
