# WasmWiz development environment configuration
# Copy this file to `.env` to override defaults for local development.
# Adjust values as needed for your environment.

# Core application environment
ENVIRONMENT=development
LOG_LEVEL=debug
AUTH_REQUIRED=false

# Database configuration
DATABASE_URL=postgresql://wasmwiz:wasmwiz@localhost:5432/wasmwiz_dev

# Redis configuration (disabled by default in development)
REDIS_URL=redis://127.0.0.1:6379
REDIS_ENABLED=false

# Server configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# Security and execution limits
API_SALT=dev-salt-change-me-before-production
MAX_WASM_SIZE=10485760
MAX_INPUT_SIZE=1048576
EXECUTION_TIMEOUT=5
MEMORY_LIMIT=134217728

# Content Security Policy (optional overrides)
CSP_REPORT_URI=
CSP_ENABLE_NONCE=false
